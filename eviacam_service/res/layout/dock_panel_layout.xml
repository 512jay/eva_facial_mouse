<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

	<LinearLayout
	    android:id="@+id/collapsible_view"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="start"
	    android:background="@color/half_alpha"
	    android:orientation="vertical" >
	
	    <ImageButton
	        android:id="@+id/back_button"
	        android:layout_width="32dip"
	        android:layout_height="32dip"	        
	        android:background="@drawable/back_icon"
	        android:contentDescription="@string/back_button" />
	    
	    <ImageButton
	        android:id="@+id/home_button"
	        android:layout_width="32dip"
	        android:layout_height="32dip"
	        android:background="@drawable/home_icon" 
	        android:contentDescription="@string/home_button" />
	    
	    <ImageButton
	        android:id="@+id/recents_button"
	        android:layout_width="32dip"
	        android:layout_height="32dip"
	        android:background="@drawable/recents_icon" 
	        android:contentDescription="@string/recents_button" />
	
	</LinearLayout>

	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent" >

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:background="@color/half_alpha"
	        android:orientation="vertical" >
	        
	        <ImageButton
            android:id="@+id/expand_collapse_dock_panel"
            android:layout_width="15dip"
            android:layout_height="24dip"            
            android:background="@drawable/arrow_left"
            android:contentDescription="@string/dock_panel_button" />
	        
	    </LinearLayout>

	</RelativeLayout>

</LinearLayout>    
